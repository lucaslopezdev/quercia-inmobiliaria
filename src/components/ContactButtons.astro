---
import EmailIcon from "@icons/EmailIcon.astro"
import TelephoneIcon from "@icons/TelephoneIcon.astro"
import Whatsapp from "@icons/Whatsapp.astro"

interface Props {
  code: string;
}

const { code } = Astro.props
---

<section class="flex justify-between md:justify-end gap-2 h-10 mt-2">
  <a
    href={`https://wa.me/+5491164874365?text=Hola%2C%20quiero%20consultar%20por%20la%20publicacion%3A%20https%3A%2F%2Fwww.quercia.com.ar%2Fpropiedad%2F%3Fcode%3D${code}`}
    target="_blank"
    rel="noopener noreferrer"
    class="bg-whatsapp text-white  hover:saturate-150 hover:cursor-pointer hover:scale-[1.03] transition-all duration-150 rounded-md md:rounded-full px-2 flex justify-center items-center md:w-fit md:px-1 gap-1"
  >
    <p class="block md:hidden">Whatsapp</p>
    <Whatsapp size="32" />
  </a>
  <a href="tel:45726222" class="bg-blueQ text-white hover:saturate-150 hover:cursor-pointer hover:scale-[1.03] transition-all duration-150 w-full md:w-fit md:px-4 rounded-md flex justify-center gap-2 items-center">
    Llamar
    <TelephoneIcon  />
  </a>
  <a href="mailto:querciaprop@gmail.com" class="bg-redQ hover:saturate-150 hover:cursor-pointer hover:scale-[1.03] transition-all duration-150 text-white w-full md:px-4 md:w-fit rounded-md flex gap-2 justify-center items-center">
    Email
    <EmailIcon />
  </a>
</section>
