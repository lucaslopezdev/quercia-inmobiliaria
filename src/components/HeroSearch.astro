---
import options from '../../mock/searchOptions.json'
import ArrowDown from '@icons/ArrowDown.astro'
---

<section class="flex flex-col p-4 items-center relative w-full h-[515px] object-cover mb-5">
  <img src="bg-header.webp" alt="Imagen de un living" class="absolute -z-10 object-cover size-full inset-0">

  <h1 class="text-white py-5 font-bold text-2xl">Encontr√° tu hogar</h1>
  
  <form action="" class="bg-white max-w-5xl rounded-lg h-60 w-full p-2">
    <ul class="flex gap-3 pb-2">
      <li class="hover:bg-gray-100 cursor-pointer transition-all duration-200 px-3 py-1.5 rounded-md">Alquilar</li>
      <li class="hover:bg-gray-100 cursor-pointer transition-all duration-200 px-3 py-1.5 rounded-md">Comprar</li>
    </ul>
    <div class="relative">
      <select class="w-full h-12  cursor-pointer  appearance-none outline-none border rounded-md px-2">
        { options.map(({ type, id }) => {
          const initialValue = id === 1;
          const literal = initialValue ? 'Departamento' : type
          return (
          <option value={type} selected={literal}>{literal}</option>
        )})}
      </select>
      <div class="pointer-events-none absolute inset-y-0 right-0 px-2 flex items-center">
        <ArrowDown size="16" />
      </div>
    </div>
  </form>
</section>